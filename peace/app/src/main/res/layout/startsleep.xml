<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/close"/>
        <ImageView
            android:id="@+id/calendar"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="30dp"
            android:src="@drawable/calendar"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/share"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp">
        <cn.edu.hebtu.software.peace.utils.RoundLightBarView
            android:id="@+id/start"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/startsleep_txtMsg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="35dp"
            android:layout_centerInParent="true"
            android:text="08:55"
            android:textColor="#ffffff"
            />
        <RelativeLayout
            android:gravity="center"
            android:layout_alignBottom="@+id/startsleep_txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
            <android.support.v4.view.ViewPager
                android:id="@+id/startsleep_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#ffffff"
           />
        </RelativeLayout>
    </RelativeLayout>
    <cn.edu.hebtu.software.peace.utils.TasksCompletedView
        android:id="@+id/startsleep_taskview"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tc:circleColor="#C5C1AA"
        tc:radius="100dp"
        tc:ringColor="#B2DFEE"
        tc:strokeWidth="6dp"
        />
</LinearLayout>

